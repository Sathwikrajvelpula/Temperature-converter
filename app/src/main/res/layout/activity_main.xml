<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEEAC"
    android:backgroundTint="#FBEEAC"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="325dp"
        android:layout_height="430dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655">

        <Spinner
            android:id="@+id/temp1"
            android:layout_width="141dp"
            android:layout_height="47dp"
            android:translationX="10dp"
            android:translationY="200dp" />

        <Spinner
            android:id="@+id/temp2"
            android:layout_width="141dp"
            android:layout_height="47dp"
            android:translationX="170dp"
            android:translationY="200dp" />

        <EditText
            android:id="@+id/plaintxt1"
            android:layout_width="305dp"
            android:layout_height="58dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="Enter temperature"
            android:inputType="number|numberDecimal"
            android:translationX="10dp"
            android:translationY="-50dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="78dp"
            android:layout_height="37dp"
            android:text="From"
            android:textSize="24sp"
            android:translationX="50dp"
            android:translationY="150dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginEnd="84dp"
            android:text="To"
            android:textSize="24sp"
            android:translationX="210dp"
            android:translationY="150dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4D160"
            android:text="Convert"
            android:translationX="120dp"
            android:translationY="360dp"
            app:cornerRadius="20dp"
            app:iconTint="#03DD1414"
            app:strokeColor="#0AFFFFFF" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="310dp"
        android:layout_height="59dp"
        android:hint="Result"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863" />

</androidx.constraintlayout.widget.ConstraintLayout>